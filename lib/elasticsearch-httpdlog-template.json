{
  "template" : "httpdlog-*",
  "order" : "1",
  "settings" : {
    "index.refresh_interval" : "5s"
  },
  "mappings" : {
    "_default_" : {
      "dynamic_templates" : [ 
        {
          "ip_address_fields" : {
            "match" : "*_ip",
            "mapping" : { "type" : "ip" }
          }
        },
        {
          "string_fields" : {
            "match" : "*",
            "match_mapping_type" : "text",
            "mapping" : {
              "type" : "text", "norms" : false,
              "fields" : {
                "keyword" : { "type" : "keyword", "ignore_above" : 256 }
              }
            }
          }
        }
      ],
      "properties" : {
        "@timestamp" : { "type" : "date" },
        "@version" : { "type" : "keyword" },
        "httpversion" : { "type" : "keyword" },
        "ident" : { "type" : "keyword" },
        "ips" : { "type" : "ip" },
        "response_code" : { "type" : "short" },
        "path" : { "type" : "keyword" },
        "original_message" : { "type" : "keyword" },
        "request_method" : { "type" : "keyword" },

        "source_geo" : {
          "dynamic" : true,
          "properties" : {
            "ip" : { "type" : "ip" },
            "location" : { "type" : "geo_point" },
            "latitude" : { "type" : "half_float" },
            "longitude" : { "type" : "half_float" }
          }
        }
      }
    }
  }
}
