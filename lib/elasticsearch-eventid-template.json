{
  "template" : "eventid-*",
  "settings" : {
    "index.refresh_interval" : "5s"
  },
  "mappings" : {
    "_default_" : {
      "_all" : { "enabled" : true },
      "dynamic_templates" : [
        {
          "string_fields" : {
            "match" : "*",
            "match_mapping_type" : "string",
            "mapping" : {
              "type" : "string", "index" : "analyzed", "omit_norms" : true,
              "fields" : {
                "raw" : { "type" : "string", "index" : "not_analyzed", "ignore_above" : 256 }
              }
            }
          }
        }
      ],
      "properties" : {
        "evt-eventid" : { "type" : "integer" },
        "evt-eventid-desc" : { "type" : "short" }
      }
    }
  }
}
