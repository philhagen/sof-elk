{
  "index_patterns": [
    "netflow-*"
  ],
  "composed_of": [
    "settings-common",
    "mappings-corecommon",
    "mappings-string",
    "mappings-ip_address",
    "mappings-geohash",
    "mappings-port",
    "mappings-zeekuid",
    "mappings-final"
  ],
  "template": {
    "mappings": {
      "runtime": {
        "flow_records_vis": {
          "type": "long",
          "script": {
            "source": "emit(doc['flow_records'].value);"
          }
        },
        "in_bytes_vis": {
          "type": "long",
          "script": {
            "source": "emit(doc['in_bytes'].value);"
          }
        },
        "in_packets_vis": {
          "type": "long",
          "script": {
            "source": "emit(doc['in_packets'].value);"
          }
        },
        "missed_bytes_vis": {
          "type": "long",
          "script": {
            "source": "emit(doc['missed_bytes'].value);"
          }
        },
        "out_bytes_vis": {
          "type": "long",
          "script": {
            "source": "emit(doc['out_bytes'].value);"
          }
        },
        "out_packets_vis": {
          "type": "long",
          "script": {
            "source": "emit(doc['out_packets'].value);"
          }
        },
        "total_bytes": {
          "type": "long",
          "script": {
            "source": "emit(doc['out_bytes'].value + doc['in_bytes'].value);"
          }
        },
        "total_bytes_vis": {
          "type": "long",
          "script": {
            "source": "emit(doc['out_bytes'].value + doc['in_bytes'].value);"
          }
        },
        "total_packets": {
          "type": "long",
          "script": {
            "source": "emit(doc['out_packets'].value + doc['in_packets'].value);"
          }
        },
        "total_packets_vis": {
          "type": "long",
          "script": {
            "source": "emit(doc['out_packets'].value + doc['in_packets'].value);"
          }
        }
      },
      "properties": {
        "exporter": {
          "type": "ip"
        }
      }
    }
  },
  "_meta": {
    "provider": "SOF-ELK"
  }
}
